<h1>Property Posts</h1>
<% if current_user.role == "owner" || current_user.role == "admin" %>
<%= "Create a New Post: " %>
  <%= link_to "<button>Create Now</button>".html_safe, new_post_path%>
<% end %>
<ul>
  <% @posts.each do |p| %>
    <li>
     <h3> <%= "For" %> <strong><%= link_to p.property_status, p %></strong><br></h3>
      <%= "Owner" %> <strong><%= link_to p.owner_name, p %></strong><br>
      <%= "Description" %> <strong><%= link_to p.description, p %></strong><br>
      <% if p.image.persisted? %>
        <%= image_tag(p.image) %><br>
      <%end%>
      <%= "posted by : " %> <strong><%= link_to p.user.first_name, p %></strong><br>
      <%= "Upload date : " %> <strong><%= link_to p.created_at, p %></strong><br>
    </li><br>
  <% end %>
</ul>
